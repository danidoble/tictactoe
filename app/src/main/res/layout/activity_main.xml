<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/turnTv"
        style="@style/turnTv_theme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/board"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/turnTv">

        <LinearLayout style="@style/row">

            <Button
                android:id="@+id/a1"
                style="@style/column_theme" />

            <View style="@style/verticalLine_theme" />

            <Button
                android:id="@+id/a2"
                style="@style/column_theme" />

            <View style="@style/verticalLine_theme" />

            <Button
                android:id="@+id/a3"
                style="@style/column_theme" />

        </LinearLayout>

        <View style="@style/HorizontalLine_theme" />

        <LinearLayout style="@style/row">

            <Button
                android:id="@+id/b1"
                style="@style/column_theme" />

            <View style="@style/verticalLine_theme" />

            <Button
                android:id="@+id/b2"
                style="@style/column_theme" />

            <View style="@style/verticalLine_theme" />

            <Button
                android:id="@+id/b3"
                style="@style/column_theme" />

        </LinearLayout>

        <View style="@style/HorizontalLine_theme" />

        <LinearLayout style="@style/row">

            <Button
                android:id="@+id/c1"
                style="@style/column_theme" />

            <View style="@style/verticalLine_theme" />

            <Button
                android:id="@+id/c2"
                style="@style/column_theme" />

            <View style="@style/verticalLine_theme" />

            <Button
                android:id="@+id/c3"
                style="@style/column_theme" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>